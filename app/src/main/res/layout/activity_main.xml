<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.calculator.MainActivity">

    <EditText
        android:id="@+id/display_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/button1"
        android:layout_below="@id/display_text_view"

        />


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_toEndOf="@id/button1"
        android:layout_below="@id/display_text_view"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_toEndOf="@id/button2"
        android:layout_below="@id/display_text_view"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/button_plus"
        android:layout_toEndOf="@id/button3"
        android:layout_below="@id/display_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@id/button1"
        />

     <Button
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:text="5"
         android:id="@+id/button5"
         android:layout_toEndOf="@id/button4"
         android:layout_below="@id/button2"
         />

      <Button
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:text="6"
          android:id="@+id/button6"
          android:layout_toEndOf="@id/button5"
          android:layout_below="@id/button3"
          />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/button_minus"
        android:layout_toEndOf="@id/button6"
        android:layout_below="@id/button_plus"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@id/button4"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="8"
        android:id="@+id/button8"
        android:layout_toEndOf="@id/button7"
        android:layout_below="@id/button5"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_toEndOf="@id/button8"
        android:layout_below="@id/button6"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="*"
        android:id="@+id/button_multiply"
        android:layout_toEndOf="@id/button9"
        android:layout_below="@id/button_minus"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@id/button8"
        android:layout_toStartOf="@id/button9"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="/"
        android:id="@+id/button_divide"
        android:layout_toEndOf="@id/button9"
        android:layout_below="@id/button_multiply"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_dot"
        android:text="."
        android:layout_below="@id/button7"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="C"
        android:id="@+id/button_clear"
        android:layout_below="@id/button9"
        android:layout_toEndOf="@id/button0"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/button_equals"
        android:text="="
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button0"
        android:layout_margin="50dp"
        />

    </RelativeLayout>
